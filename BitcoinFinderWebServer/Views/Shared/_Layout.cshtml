<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BitcoinFinder</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" />
</head>
<body>
    @{
        var isAuthenticated = Context.Session.GetString("AuthToken") != null;
    }
    @if (isAuthenticated)
    {
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
            <div class="container-fluid">
                <a class="navbar-brand" href="/Home/Index">
                    <i class="bi bi-currency-bitcoin"></i> BitcoinFinder
                </a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Index"><i class="bi bi-house"></i> Главная</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/SeedSearch"><i class="bi bi-search"></i> Поиск</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Tasks"><i class="bi bi-list-task"></i> Задачи</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Agents"><i class="bi bi-cpu"></i> Агенты</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Database"><i class="bi bi-database"></i> База данных</a>
                        </li>
                    </ul>
                    
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-person"></i> @Context.Session.GetString("Username")
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/Home/Admin"><i class="bi bi-gear"></i> Админ панель</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/Account/Logout"><i class="bi bi-box-arrow-right"></i> Выйти</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    }
    else
    {
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
            <div class="container-fluid">
                <a class="navbar-brand" href="/Home/Index">
                    <i class="bi bi-currency-bitcoin"></i> BitcoinFinder
                </a>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Login"><i class="bi bi-box-arrow-in-right"></i> Войти</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    }
    
    <div class="container">
        @RenderBody()
    </div>
    
    <footer class="mt-5 py-3 bg-light">
        <div class="container text-center">
            <p class="text-muted mb-0">BitcoinFinder &copy; 2024</p>
        </div>
    </footer>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 