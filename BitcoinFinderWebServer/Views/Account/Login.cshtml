@model BitcoinFinderWebServer.Models.LoginViewModel
@{
    ViewData["Title"] = "Вход";
    Layout = "_Layout";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow">
            <div class="card-body">
                <div class="text-center mb-4">
                    <i class="bi bi-currency-bitcoin text-primary" style="font-size: 3rem;"></i>
                    <h3 class="mt-2">BitcoinFinder</h3>
                    <p class="text-muted">Войдите в систему</p>
                </div>
                
                <form asp-action="Login" method="post">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label asp-for="Username" class="form-label">
                            <i class="bi bi-person"></i> Имя пользователя
                        </label>
                        <input asp-for="Username" name="Username" class="form-control" placeholder="Введите имя пользователя" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">
                            <i class="bi bi-lock"></i> Пароль
                        </label>
                        <input asp-for="Password" name="Password" class="form-control" type="password" placeholder="Введите пароль" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-box-arrow-in-right"></i> Войти
                        </button>
                    </div>
                    
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger mt-3">
                            <i class="bi bi-exclamation-triangle"></i>
                            @Html.ValidationSummary(false, "", new { @class = "mb-0" })
                        </div>
                    }
                </form>
                
                <div class="text-center mt-3">
                    <small class="text-muted">
                        <i class="bi bi-info-circle"></i> 
                        По умолчанию: admin / admin123
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js"></script>
} 